{
  "app-id": "org.cockpit_project.CockpitClient",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "cockpit-client",
  "rename-icon": "cockpit-client",
  "finish-args": [
    "--talk-name=org.freedesktop.Flatpak",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "cockpit-client",
      "buildsystem": "autotools",
      "config-opts": [
        "--enable-cockpit-client",
        "--with-systemdunitdir=/invalid",
        "CPPFLAGS=-Itools/mock-build-env",
        "--with-admin-group=root",
        "--disable-doc"
      ],
      "make-args": [
        "build-for-flatpak"
      ],
      "make-install-args": [
        "DOWNSTREAM_RELEASES_XML=org.cockpit_project.CockpitClient.releases.xml"
      ],
      "install-rule": "install-for-flatpak",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit/releases/download/352/cockpit-352.tar.xz",
          "sha256": "72098a51f85c4a63f2e276af119920a5faca978b57652df562b409b5941b5146"
        },
        {
          "type": "file",
          "path": "org.cockpit_project.CockpitClient.releases.xml"
        }
      ]
    },
    {
      "name": "cockpit-files",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-files/releases/download/33/cockpit-files-33.tar.xz",
          "sha256": "6a54cc0639c82dd00816a3428656685f9f23763bb8f3e9cfc31e0f423cf75c0c"
        }
      ]
    },
    {
      "name": "cockpit-machines",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-machines/releases/download/345/cockpit-machines-345.tar.xz",
          "sha256": "ab0acb6abf1bbbdf03283b23bb4bdb78d14013142cea1561b0661367bdfd279b"
        }
      ]
    },
    {
      "name": "cockpit-ostree",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-ostree/releases/download/219/cockpit-ostree-219.tar.xz",
          "sha256": "b0c9b51a7747945b27cf0995da04a3d59ed6d3874e00fb91fa6ab324c50ff02f"
        }
      ]
    },
    {
      "name": "cockpit-podman",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-podman/releases/download/118/cockpit-podman-118.tar.xz",
          "sha256": "93951d29136d28acee08d6bffce852289f880f2b8447f04d436f8d58e649e863"
        }
      ]
    }
  ]
}
