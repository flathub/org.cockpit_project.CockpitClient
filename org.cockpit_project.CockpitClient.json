{
  "app-id": "org.cockpit_project.CockpitClient",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "cockpit-client",
  "rename-icon": "cockpit-client",
  "finish-args": [
    "--talk-name=org.freedesktop.Flatpak",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "cockpit-client",
      "buildsystem": "autotools",
      "config-opts": [
        "--enable-cockpit-client",
        "--with-systemdunitdir=/invalid",
        "CPPFLAGS=-Itools/mock-build-env",
        "--with-admin-group=root",
        "--disable-doc"
      ],
      "make-args": [
        "build-for-flatpak"
      ],
      "make-install-args": [
        "DOWNSTREAM_RELEASES_XML=org.cockpit_project.CockpitClient.releases.xml"
      ],
      "install-rule": "install-for-flatpak",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit/releases/download/351/cockpit-351.tar.xz",
          "sha256": "e159d10edc3ed69c79afdc078528a14ce3dbe468f8f634a8f8911cb09a9e888d"
        },
        {
          "type": "file",
          "path": "org.cockpit_project.CockpitClient.releases.xml"
        }
      ]
    },
    {
      "name": "cockpit-files",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-files/releases/download/32/cockpit-files-32.tar.xz",
          "sha256": "ecafcd5abfedd15ab2548ef85fe457775ba337cb3bd4ee07a9ed48239e22c9de"
        }
      ]
    },
    {
      "name": "cockpit-machines",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-machines/releases/download/344/cockpit-machines-344.tar.xz",
          "sha256": "6af423f7d8d8c0ab4fd23ba90389f963c2feb63eeb551ef5ad76ea66eee59db6"
        }
      ]
    },
    {
      "name": "cockpit-ostree",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-ostree/releases/download/218/cockpit-ostree-218.tar.xz",
          "sha256": "8ac528944a1c0ed44df19d9d061c9f6f57a15a90145a5dee1920a0f1d6f1eb7d"
        }
      ]
    },
    {
      "name": "cockpit-podman",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-podman/releases/download/117/cockpit-podman-117.tar.xz",
          "sha256": "ff224361acc8fccb32efe40c56de228c679fc4cf863913488b25b1fe2208c192"
        }
      ]
    }
  ]
}
