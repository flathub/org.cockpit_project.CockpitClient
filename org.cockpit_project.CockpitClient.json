{
  "app-id": "org.cockpit_project.CockpitClient",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "cockpit-client",
  "rename-icon": "cockpit-client",
  "finish-args": [
    "--talk-name=org.freedesktop.Flatpak",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "cockpit-client",
      "buildsystem": "autotools",
      "config-opts": [
        "--enable-cockpit-client",
        "--with-systemdunitdir=/invalid",
        "CPPFLAGS=-Itools/mock-build-env",
        "--with-admin-group=root",
        "--disable-doc"
      ],
      "make-args": [
        "build-for-flatpak"
      ],
      "make-install-args": [
        "DOWNSTREAM_RELEASES_XML=org.cockpit_project.CockpitClient.releases.xml"
      ],
      "install-rule": "install-for-flatpak",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit/releases/download/345/cockpit-345.tar.xz",
          "sha256": "a072c2c2979f419a687b7f4faf9f6af1328309e01c46adfa959baf18bb106107"
        },
        {
          "type": "file",
          "path": "org.cockpit_project.CockpitClient.releases.xml"
        }
      ]
    },
    {
      "name": "cockpit-files",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-files/releases/download/27/cockpit-files-27.tar.xz",
          "sha256": "8efb03457f16b2f2bcf962b17d1528c8bbb81816dd7193d9865a29048950ed9f"
        }
      ]
    },
    {
      "name": "cockpit-machines",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-machines/releases/download/338/cockpit-machines-338.tar.xz",
          "sha256": "87626ad10aaa14c816dbbbf18ec116a510215ccf7a5918ca9aa1c616ec184cf4"
        }
      ]
    },
    {
      "name": "cockpit-ostree",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-ostree/releases/download/214/cockpit-ostree-214.tar.xz",
          "sha256": "f27d88fe18c11d64850cf1a4b01bdab0143409f623422cebae9760fca6c5ae0b"
        }
      ]
    },
    {
      "name": "cockpit-podman",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-podman/releases/download/112/cockpit-podman-112.tar.xz",
          "sha256": "9a084e846c24372e73f03138217258c85d9d887c6604a5da06abc1adda59229c"
        }
      ]
    }
  ]
}
