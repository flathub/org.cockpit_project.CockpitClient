{
  "app-id": "org.cockpit_project.CockpitClient",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "cockpit-client",
  "rename-icon": "cockpit-client",
  "finish-args": [
    "--talk-name=org.freedesktop.Flatpak",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "cockpit-client",
      "buildsystem": "autotools",
      "config-opts": [
        "--enable-cockpit-client",
        "--with-systemdunitdir=/invalid",
        "CPPFLAGS=-Itools/mock-build-env",
        "--with-admin-group=root",
        "--disable-doc"
      ],
      "make-args": [
        "build-for-flatpak"
      ],
      "make-install-args": [
        "DOWNSTREAM_RELEASES_XML=org.cockpit_project.CockpitClient.releases.xml"
      ],
      "install-rule": "install-for-flatpak",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit/releases/download/349/cockpit-349.tar.xz",
          "sha256": "2fa8eef40968135fb6df866a415eba8d4d5adbf4d44f293f28d4f3c841b301bb"
        },
        {
          "type": "file",
          "path": "org.cockpit_project.CockpitClient.releases.xml"
        }
      ]
    },
    {
      "name": "cockpit-files",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-files/releases/download/30/cockpit-files-30.tar.xz",
          "sha256": "64d2bfac99eeb0dcd8e9c66e03d12448a3052481d36a9aa1360290f14d3188ea"
        }
      ]
    },
    {
      "name": "cockpit-machines",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-machines/releases/download/342/cockpit-machines-342.tar.xz",
          "sha256": "0cc49d5d0544345401235c824c887b90c8f571c728e8e2d6cf0ffdb7f87b806a"
        }
      ]
    },
    {
      "name": "cockpit-ostree",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-ostree/releases/download/216/cockpit-ostree-216.tar.xz",
          "sha256": "fa7709f5fb5509324999995463aa17093d276d833d267f64be96f650922a2fb2"
        }
      ]
    },
    {
      "name": "cockpit-podman",
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/cockpit-project/cockpit-podman/releases/download/115/cockpit-podman-115.tar.xz",
          "sha256": "e2fe8fe9c613ba64a717ba76edd164c6fca7605a1a5cdf8527177b8975b08e86"
        }
      ]
    }
  ]
}
